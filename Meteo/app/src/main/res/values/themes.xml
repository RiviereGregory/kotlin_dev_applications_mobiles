<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Meteo" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="TitreFontStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:color">#000000</item>
    </style>

    <style name="ValeurFontStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:color">#778899</item>
    </style>

    <style name="Theme.Meteo.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Meteo.AppWidgetContainer" parent="Theme.Meteo.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

</resources>